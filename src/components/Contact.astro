---
import SectionContainer from "@containers/SectionContainer.astro";
import SectionTitle from "@components/SectionTitle.astro";
import Button from "@components/Button.astro";
---

<SectionContainer>
  <SectionTitle
    title="Contact Us"
    description="Connect with Us: Let's Discuss Your Digital Marketing Needs"
  />
  <div
    class="bg-[#F3F3F3] overflow-hidden px-12 py-10 rounded-[40px] relative lg:flex"
  >
    <form
      action="post"
      class="flex flex-col gap-9 lg:min-w-[400px] xl:min-w-[550px]"
    >
      <fieldset class="flex justify-center gap-12 lg:justify-start">
        <div class="flex gap-3 items-center">
          <input
            type="radio"
            name="messageType"
            id="hi"
            value="Say Hi"
            checked
          />
          <label for="hi" class="text-sm md:text-base">Say Hi</label>
        </div>
        <div class="flex gap-3 items-center">
          <input
            type="radio"
            name="messageType"
            id="quote"
            value="Get a Quote"
          />
          <label for="quote" class="text-sm md:text-base">Get a Quote</label>
        </div>
      </fieldset>
      <div class="flex flex-col gap-6">
        <div class="flex flex-col gap-2">
          <label for="name" class="text-sm md:text-base">Name</label>
          <input
            type="text"
            placeholder="Name"
            class="border border-dark px-5 py-4 rounded-xl w-full outline-none"
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="name" class="text-sm md:text-base">Email *</label>
          <input
            type="email"
            placeholder="Email"
            class="border border-dark px-5 py-4 rounded-xl w-full outline-none"
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="name" class="text-sm md:text-base">Message *</label>
          <textarea
            name=""
            id=""
            placeholder="Message"
            class="min-h-32 border border-dark px-5 py-4 rounded-xl w-full outline-none"
          ></textarea>
        </div>
      </div>
      <Button text="Send Message" />
    </form>
    <img
      src="/contact-img.webp"
      class="hidden lg:h-[500px] absolute right-0 top-1/2 -translate-y-1/2 lg:block xl:h-[550px]"
      alt="Illustration for Contact Form"
    />
  </div>
</SectionContainer>

<style>
  input[type="radio"] {
    appearance: none;
    -webkit-appearance: none;
    width: 26px;
    height: 26px;
    border: 1px solid #191a23;
    border-radius: 50%;
    background-color: transparent;
    position: relative;
  }

  input[type="radio"]:checked::before {
    content: "";
    display: block;
    width: 14px;
    height: 14px;
    background-color: #b9ff66;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
</style>
